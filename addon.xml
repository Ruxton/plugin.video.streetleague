<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.streetleague" version="0.2.1" name="Streetleague.com Ondemand" provider-name="Ruxton">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
        <import addon="script.common.plugin.cache" version="2.5.5"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Watch streams from Streetleague.com</summary>
        <description>Check out http://streetleague.com/ondemand</description>
        <platform>all</platform>
    </extension>
    <extension point="xbmc.addon.repository" name="Ruxton's XBMC Addon Repository">
        <info compressed="false">https://raw.github.com/Ruxton/xbmc-addon-repo/master/addons.xml</info>
        <checksum>https://raw.github.com/Ruxton/xbmc-addon-repo/master/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/Ruxton/xbmc-addon-repo/raw/master/repo/</datadir>
    </extension>
</addon>
